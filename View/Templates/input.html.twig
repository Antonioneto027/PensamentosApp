</html></ul></nav><main><section class="container">

<form action="/thoughts/save_thoughts" method="post">
    <label for="cause">
        <strong>What've caused your emotion?</strong>
    </label>
    <input type="text" name="cause" placeholder="Insert the cause" aria-label="Text">
    <label for="emotions">
        <strong>Which emotions did you have?</strong>
    </label>
    <input type="text" name="emotion" placeholder="Insert the emotion" aria-label="Text">
    <label for="intensity">
        <strong>What's the intensity of your emotion?</strong>
    </label>
    <select name="intensity" id="intensity" aria-label="Intensity">
        <option value="" disabled selected>Select the intensity</option>
    </select>
    <label for="thoughts">
        <strong>Which thoughts did you have?</strong>
    </label>
    <fieldset id="form-container">
        <label>
            <input type="text" name="thoughts[]" placeholder="Insert a thought">
        </label>
    </fieldset>

    <button type="button" onclick="GFG_Fun()">+</button>

    <div class="button-wdt">
        <input type="submit" value="Save">
    </div>
  
        

</form>
<div>
 <a href="/thoughts/list">
                    <button style="background-color: #fe5b30 !important">Cancel</button>
                </a>

</div>

 

</section></body></body></html></main><script>document.addEventListener("DOMContentLoaded", function () {
    const MAX_FIELDS = 3;

    window.GFG_Fun = function () {
        const container = document.getElementById("form-container");
        const currentFields = container.querySelectorAll('input[name="thoughts[]"]').length;

        if (currentFields >= MAX_FIELDS) {
            alert("You can only insert up to " + MAX_FIELDS + " thoughts.");
            return;
        }

        // Cria o label
        const label = document.createElement("label");

        // Cria o input
        const input = document.createElement("input");
        input.type = "text";
        input.name = "thoughts[]";
        input.placeholder = "Insert a thought";

        // Adiciona input ao label
        label.appendChild(input);

        // Adiciona label ao container
        container.appendChild(label);
    };
});

const select = document.getElementById('intensity');
for (let i = 1; i <= 10; i++) {
    const option = document.createElement('option');
    option.value = i;
    option.textContent = i;
    select.appendChild(option);
}</script></body></html>
